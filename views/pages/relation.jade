extends ../layout

block content
   script(type='text/javascript', src='/js/relation.js')
   .container
      .row
         .panel.panel-default
            .panel-heading
               h3.panel-title 添加tag关联
            .panel-body
               div
                  span.small 微博版本：
                  .btn-group
                     button.btn.btn-default.dropdown-toggle.btn-sm(type='button',data-toggle='dropdown') weibo5.0
                        span.caret
                     ul.dropdown-menu(role='menu')
                        if versions
                           if versions.length > 0
                              each version in versions
                                 li
                                    a.btn #{version.version_name}
                        li.divider
                        li
                           a.btn.btn-default.btn-sm(href='./version') 创建新版本
               br
               div
                  span.small 选择仓库：
                  .btn-group
                     button.btn.btn-default.dropdown-toggle.btn-sm(type='button',data-toggle='dropdown') appmarket
                        span.caret
                     ul.dropdown-menu(role='menu')
                        if models
                           if models.length > 0
                              each model in models
                                 li
                                    a.btn #{model.model_name}
               br
               div
                  span.small 选择标签：
                  .btn-group
                     button.btn.btn-default.dropdown-toggle.btn-sm(type='button',data-toggle='dropdown') tag_5.0.0
                        span.caret
                     ul.dropdown-menu(role='menu')
                        li
                           a.btn tag_5.0.0
                        li
                           a.btn tag_5.1.0
                        li
                           a.btn tag_5.5.0
               br
               div
                  a.btn.btn-default(type='button',href='./') 保存
                  a.btn.btn-default(type='button',href='./') 取消