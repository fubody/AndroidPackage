extends ../layout

block content
    .container
        .row
            .panel.panel-default
                .panel-heading
                    h3.panel-title 添加微博版本
                .panel-body
                    form.form-horizontal(role='form')
                        .input-group.input-group-sm
                            span.input-group-addon 微博版本名
                            input.form-control(type='text')
                        br
                        .input-group.input-group-sm
                            span.input-group-addon 版本描述
                            input.form-control(type='text')
                        br
                        .input-group.input-group-sm
                            button.btn.btn-default(type="submit") 录入
                            button.btn.btn-default(type='button', href='/task') 取消
                            //a.btn.btn-default(type='submit') 录入
                            //a.btn.btn-default(type='button',href='/task') 取消