extends ../layout
block content
    script(type='text/javascript', src='/js/relation.js')
    .container
        .row
            .panel.panel-default
                .panel-heading
                    h3.panel-title 添加微博版本
                .panel-body
                    form.form-horizontal(role='form',action='/version/new',method='post',onsubmit='return check_versionform()')
                        .input-group.input-group-sm
                            span.input-group-addon 微博版本名
                            input#version_name.form-control(type='text',name='version_name',error='#{err_msg}')
                        br
                        .input-group.input-group-sm
                            span.input-group-addon 版本描述
                            input#description.form-control(type='text',name='description')
                        br
                        .input-group.input-group-sm
                            button.btn.btn-default(type="submit") 录入
                            a.btn.btn-default(type='button', href='/relation') 取消
    if err_msg
       script(type='text/javascript')
       script.
           var err_msg = $('#version_name').attr('error')
           alert(err_msg);