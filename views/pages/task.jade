extends ../layout
script(type="text/javascript", src='/js/utils.js')
block content
   script(type='text/javascript', src='/js/task.js')
   .container
      .row
         .panel
            span.btn-lg 新建打包任务

         .panel.panel-default
            .panel-heading
               span.label.label-default 基本配置
            .panel-body
               span.small 微博版本：
               .btn-group
                  button.btn.btn-default.dropdown-toggle.btn-sm(type='button',data-toggle='dropdown')
                     a#version_display(type='text') 选择微博版本
                     span.caret
                  ul.dropdown-menu(role='menu')
                     if versions
                        if versions.length > 0
                           each version in versions
                              li
                                 a.btn(onclick='display("#{version.version_name}")') #{version.version_name}
                        else
                           li.divider
                           li
                              a.btn.btn-default.btn-sm(href='./') 暂无可用于打包的任务
                     else
                        li.divider
                        li
                           a.btn.btn-default.btn-sm(href='./') 暂无可用于打包的任务
               br
               br
               .input-group.input-group-sm
                  span.input-group-addon 任务描述
                  input.form-control(type='text',name='description')
            .panel-body
               a.btn.btn-default.navbar-left(type='button',href='./task/new') 保存
               a.btn.btn-default.navbar-left(type='button',href='./') 取消
